<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colores de la aplicación -->
    <SolidColorBrush x:Key="CorpColor" Color="#FF3CC2E7" />
    <SolidColorBrush x:Key="CorpColor2" Color="#FFBEDFE8" />
    <SolidColorBrush x:Key="DefaultBg" Color="#FFEAEAEA" />
    <SolidColorBrush x:Key="SplashBg" Color="#A0EAEAEA" />
    <SolidColorBrush x:Key="SplashBg2" Color="#E0EAEAEA" />
    <SolidColorBrush x:Key="ControlText" Color="#FF231F20" />
    <SolidColorBrush x:Key="BadColor" Color="#FFFFEAEA" />
    <SolidColorBrush x:Key="BadColor2" Color="#FFFFA0A0" />
    <SolidColorBrush x:Key="BadColorT" Color="#70FFEAEA" />
    <SolidColorBrush x:Key="BadColorT2" Color="#70FFA0A0" />

    <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
    <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
    <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
    <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
</ResourceDictionary>